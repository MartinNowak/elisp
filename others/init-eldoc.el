(require 'eldoc-extension)

;;; Code:

(setq eldoc-idle-delay 0)               ;显示延迟
(dolist (hook (list
               'ielm-mode-hook
               'emacs-lisp-mode-hook
               'lisp-interaction-mode-hook
               'message-mode-hook
               'Info-mode-hook
               'erc-mode-hook
               'org-mode-hook
               ))
  (add-hook hook 'turn-on-eldoc-mode))
(setq eldoc-argument-case 'eldoc-argument-list) ;高亮函数参数

(provide 'init-eldoc)

